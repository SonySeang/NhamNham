<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFA726"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#FFFFFF"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="When Add Card"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <!-- Heart Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Search Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:tint="#FFFFFF"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Food Item List -->
    <LinearLayout
        android:id="@+id/food_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header_section"
        android:padding="16dp">

        <!-- Food Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="8dp">

            <!-- Image Placeholder -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="#D81B60"
                android:layout_marginEnd="16dp" />

            <!-- Item Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grill Walking Catfish"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 2.50 / Box"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/decrease_quantity_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_remove"
                    android:tint="#FFA726"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/quantity_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/increase_quantity_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add"
                    android:tint="#FFA726"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>

        <!-- Food Item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="8dp">

            <!-- Image Placeholder -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="#D81B60"
                android:layout_marginEnd="16dp" />

            <!-- Item Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grill Walking Catfish"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 2.50 / Box"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/decrease_quantity_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_remove"
                    android:tint="#FFA726"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/quantity_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/increase_quantity_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add"
                    android:tint="#FFA726"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Total and Payment Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/total_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total: $ 2.20"
            android:textSize="18sp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/payment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFA726"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>